@model AuthenticationDemo.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa; /* Light grey background for the entire page */
            font-family: 'Roboto', sans-serif;
            margin: 0;
            padding: 0;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container-fluid {
            height: 100vh; /* Full screen height */
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            border-radius: 10px;
            overflow: hidden;
        }

        .left-section {
            background-color: #fff; /* White background */
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .left-section img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .right-section {
            background-color: #1c1c1c; /* Dark background for the form section */
            color: #fff;
            padding: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%; /* Ensure the right section fills the entire height */
        }

        .login-container {
            width: 100%;
            max-width: 300px;
        }

        .login-container h3 {
            text-align: center;
            margin-bottom: 1.5rem;
            font-weight: 700;
        }

        .form-control {
            background-color: transparent; /* Transparent background */
            border: 2px solid #ff69b4; /* Pink border */
            border-radius: 5px;
            color: #fff;
            padding: 0.5rem 1rem;
            margin-bottom: 1rem;
            transition: border-color 0.3s;
        }

        .form-control::placeholder {
            color: #fff; /* White placeholder text */
            opacity: 0.6;
        }

        .form-control:focus {
            border-color: #ff1493; /* Darker pink on focus */
            box-shadow: none;
        }

        .btn-primary {
            background-color: #000; /* Black background */
            border: none;
            padding: 0.75rem;
            width: 100%;
            font-weight: bold;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #333; /* Darker black on hover */
        }

        .form-label {
            color: #fff;
            margin-bottom: 0.5rem;
            display: block;
        }

        .text-danger {
            color: #ff4d4d;
            margin-top: -0.5rem;
            margin-bottom: 0.5rem;
            font-size: 0.875rem;
        }

        .forgot-password {
            text-align: center;
            margin-top: 1rem;
        }

        .forgot-password a {
            color: #ff69b4;
            text-decoration: none;
            transition: color 0.3s;
        }

        .forgot-password a:hover {
            color: #ff1493;
            text-decoration: underline;
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .container-fluid {
                flex-direction: column;
                height: auto;
            }

            .left-section, .right-section {
                width: 100%;
                height: 50vh;
            }

            .left-section img {
                height: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container-fluid row g-0">
        <!-- Left Section: Image -->
        <div class="col-md-8 left-section">
            <img src="https://wallpaperaccess.com/full/5065813.jpg" alt="Login Image">
            <!-- Replace the above URL with your desired image URL -->
        </div>

        <!-- Right Section: Login Form -->
        <div class="col-md-4 right-section">
            <div class="login-container">
                <h3>LOGIN</h3>
                @using (Html.BeginForm("Login", "Authenticate", FormMethod.Post, new { @class = "form" }))
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Username" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                }
                <div class="forgot-password">
                    @Html.ActionLink("Forgot Password? Reset Now", "ForgePassword")
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
